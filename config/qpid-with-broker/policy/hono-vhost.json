[
  # The policy for downstream applicatons' access to Hono

  ["vhost",
    {
      "id": "hono",
      "maxConnections": 500,
      "maxConnectionsPerUser": 20,
      "maxConnectionsPerHost": 10,
      "groups": {
        "DEFAULT_TENANT": {
          "users": "user1@HONO",
          "remoteHosts": "*",
          "maxSessions": 100,
          "maxMessageSize": 10240,
          "sources": "telemetry.DEFAULT_TENANT, event.DEFAULT_TENANT"
        },
        "anotherTenant": {
          "users": "user2@HONO",
          "remoteHosts": "*",
          "maxSessions": 100,
          "maxMessageSize": 10240,
          "sources": "telemetry.anotherTenant"
        },
        "anonymous" : {
          "users": "anonymous",
          "sources": "telemetry.*",
          "targets": "telemetry.*"
        }
      }
    }
  ]
]
